<!-- Sign In Page -->

<div class="container padding-top-100 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
	  
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-signin" role="form">
	    <%= f.email_field :email, class: "form-control input-lg", type: "text", placeholder: "Email", :autofocus => true %>
	    <%= f.password_field :password, class: "form-control input-lg", type: "password", placeholder: "Password" %>	    
	    <%= f.submit "Sign in", class: "btn btn-primary btn-lg btn-block"%>
	    <div class="checkbox">
	      <%= f.check_box :remember_me %>
	      <%= f.label :remember_me %>
	    </div>
	  </div>
	<% end %>

	<div class="shared-links text-center">
		<%= render "devise/shared/links" %>
	</div>

</div>