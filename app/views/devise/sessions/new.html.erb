<!-- Sign In Page -->

<div class="container col-md-4 col-md-offset-4">
	  
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

	  <form class="form-signin" role="form">
	    <%= f.email_field :email, class: "form-control input-lg", type: "text", placeholder: "Email", :autofocus => true %>
	    <%= f.password_field :password, class: "form-control input-lg", type: "password", placeholder: "Password" %>
	    <div class="checkbox">
	      <%= f.check_box :remember_me %>
	      <%= f.label :remember_me %>
	    </div>

	    <%= f.submit "Sign in", class: "btn btn-primary btn-lg btn-block"%>
	  </form>
	<% end %>	  
	<%= render "devise/shared/links" %>

</div>