<!-- Sign In Page -->

<div class="container page-sign-in padding-top-100 col-md-4 col-md-offset-4">
	  
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

	  <div class="form-signin" role="form">
	  	<h1>
	  		<% current_path = request.original_url %>
	  		<%= "#{current_path}" %>
	  	</h1>
	    <%= f.email_field :email, class: "form-control input-lg", type: "text", placeholder: "Email", :autofocus => true %>
	    <%= f.password_field :password, class: "form-control input-lg", type: "password", placeholder: "Password" %>	    
	    <%= f.submit "Sign in", class: "btn btn-primary btn-lg btn-block"%>
	    <div class="checkbox">
	      <%= f.check_box :remember_me %>
	      <%= f.label :remember_me %>
	    </div>
	  </div>

	<% end %>	  
	<%= render "devise/shared/links" %>

</div>